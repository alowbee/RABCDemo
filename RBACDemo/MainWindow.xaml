<WPF:CustomWindow x:Class="SqliteDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WPF="clr-namespace:WPFToolkit.Controls;assembly=WPFToolkit"
        FontSize="15" Foreground="{DynamicResource AccentPressedBrush}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="当前权限：" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="{Binding CurrentGroup}" VerticalAlignment="Center"></TextBlock>
           
            <Button Content="用户管理" Click="User_Click" Margin="5"></Button>
            <Button Content="群组管理" Click="Group_Click" Margin="5"></Button>
            <Button Content="权限管理" Click="Action_Click" Margin="5"></Button>
            <Button Content="用户与群组" Click="UserGroup_Click" Margin="5"></Button>
            <Button Content="群组与权限" Click="GroupAction_Click" Margin="5"></Button>
        </StackPanel>
        <ContentControl x:Name="MainContent" Grid.Row="1" Content="{Binding SubContent}"></ContentControl>
    </Grid>
</WPF:CustomWindow>
