<Window x:Class="SqliteDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqliteDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Width="60" Content="登陆" Click="Login_Click" Margin="5"></Button>
            <Button Width="60" Content="用户管理" Click="User_Click" Margin="5"></Button>
            <Button Width="60" Content="群组管理" Click="Group_Click" Margin="5"></Button>
            <Button Width="60" Content="权限管理" Click="Action_Click" Margin="5"></Button>
        </StackPanel>
        <Frame x:Name="MainContent" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
